    <section class="create" style="width: 50%; margin: 0 auto; padding: 60px 0px; " >
        <div class="container">

            <h1 
                style="font-family: 'Playfair Display', serif; font-weight: 700; letter-spacing: -1px; text-align: center; padding: 20px 0px;" > 
            
                Create a blog 

            </h1>        

            <form action="/blogs" method="POST" >

                <div class="form-group">
                    <label >Title</label>
                    <input name="title" class="form-control" placeholder="Title of the post" required >
                </div>       

                <div class="form-group">
                    <label> Description</label>
                    <textarea name="description" class="form-control" rows="8" placeholder="Post Description" required ></textarea>
                </div>
                
                
                <button type="submit" class="btn btn-success post-btn" style="width: 30%; font-size: 22px; font-weight: 500;"> Post </button>

            </form>
        </div>    
    </section>
